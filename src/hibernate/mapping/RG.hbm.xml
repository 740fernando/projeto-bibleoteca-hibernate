<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="entities">
	<class name="RG" table="rg">
		<id name="id" column="id">
			<generator class="foreign"> <!-- O relac. entre cliente e rg Ã© 1 para 1 , ambos devem gerenciar a chave, dessa maneira, eu defino generator como foreign e logo abaixo defino o atributo de controle -->
				<param name="property">cliente</param> <!-- o atributo cliente irÃ¡ controlar a chave  -->
			</generator>
		</id>
		
		<property name="numero" column="numero" not-null="true"/>
		
		<one-to-one name="cliente" constrained="true"/> <!-- Compartilhamento de chave = 'constrained = true' -->
		
	</class>
</hibernate-mapping>