<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="entities">
	<class name="Cliente" table="cliente">
		<id name="id" column="id">
			<generator class="native"/> <!-- class assigned = Identifica a definicao da chave primaria . O banco de dados Ã© responsavel por definir o id para entidade -->
		</id>
		
		<property name="nome" column="nome" not-null="true" />
		
		<one-to-one name="rg" />
		
		<set name = "livros" table = "emprestimo" inverse="true">
			<key column="cliente_id"/>
			<many-to-many column="livro_id" class="Livro" />
		</set>
	
	</class>	
</hibernate-mapping>